<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chat="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.gp.chat.presentation.groupchat.GroupChatViewModel" />
        <variable
            name="fragment"
            type="com.gp.chat.presentation.groupchat.GroupChatFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/layout_group_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            chat:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/group_chat_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:theme="@style/Widget.AppCompat.Toolbar"
                chat:popupTheme="@style/Theme.AppCompat.Light">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_gchat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            chat:layout_constrainedHeight="true"
            chat:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            chat:layout_constraintBottom_toTopOf="@+id/text_gchat_indicator"
            chat:layout_constraintTop_toBottomOf="@+id/layout_group_chat" />

        <TextView
            android:id="@+id/text_gchat_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:visibility="gone"
            chat:layout_constraintBottom_toTopOf="@id/view"
            chat:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            chat:layout_constraintBottom_toTopOf="@+id/chatbox_layout" />

        <RelativeLayout
            android:id="@+id/chatbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            chat:layout_constraintBottom_toBottomOf="parent"
            chat:layout_constraintStart_toStartOf="parent">


            <EditText
                android:layout_marginStart="16dp"
                android:id="@+id/edit_gchat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/button_gchat_send"
                android:background="@android:color/transparent"
                android:hint="Enter Message"
                android:text="@={viewmodel.currentMessageState.message}"
                android:inputType="text"
                android:maxLines="6"
                tools:ignore="Autofill" />

            <Button
                android:id="@+id/button_gchat_send"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                style="@style/Widget.Material3.Button.IconButton"
                android:background="?attr/selectableItemBackground"
                chat:icon="@drawable/baseline_send_24"
                android:onClick="@{() -> fragment.onSendMessageClick()}"
                />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
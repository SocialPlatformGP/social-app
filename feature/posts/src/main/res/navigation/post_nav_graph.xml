<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_nav_graph"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.gp.posts.presentation.createpost.CreatePostFragment"
        android:label="CreatePostFragment" >
        <action
            android:id="@+id/action_createPostFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.gp.posts.presentation.postsfeed.FeedFragment"
        android:label="FeedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_postDetialsFragment"
            app:destination="@id/postDetialsFragment" />
        <action
            android:id="@+id/action_feedFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/postDetialsFragment"
        android:name="com.gp.posts.presentation.postDetails.PostDetialsFragment"
        android:label="fragment_post_detials"
        tools:layout="@layout/fragment_post_detials" >
        <action
            android:id="@+id/action_postDetialsFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <argument
            android:name="post"
            app:argType="com.gp.socialapp.model.Post" />
        <action
            android:id="@+id/action_postDetialsFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.gp.posts.presentation.editPostContent.EditPostFragment"
        android:label="EditPostFragment" >
        <action
            android:id="@+id/action_editPostFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <argument
            android:name="post"
            app:argType="com.gp.socialapp.model.Post" />
    </fragment>
    <fragment
        android:id="@+id/suggest_post"
        android:name="com.gp.posts.suggest_post"
        android:label="suggest_post" >
        <action
            android:id="@+id/action_suggest_post_to_searchFragment2"
            app:destination="@id/searchFragment2" />
    </fragment>
    <argument
        android:name="search_query"
        app:argType="string" />
    <fragment
        android:id="@+id/searchFragment2"
        android:name="com.gp.posts.presentation.postsSearch.SearchFragment"
        android:label="SearchFragment" >
        <argument
            android:name="Search_query"
            app:argType="string"
            android:defaultValue='" "' />
    </fragment>
</navigation>
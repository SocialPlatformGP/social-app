<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="#D8D4D4">

    <data>

            <variable
                name="postitem"
                type="com.gp.socialapp.database.model.PostEntity" />

            <variable
                name="viewModel"
                type="com.gp.posts.presentation.postDetails.PostDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".presentation.postDetails.PostDetailsFragment">


                <androidx.cardview.widget.CardView
                    android:id="@+id/item_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardUseCompatPadding="true"
                    android:foreground="@drawable/stroke_cardview"
                    style="@style/ImageViewVoteStyle">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/replyContainer"
                        android:layout_width="match_parent"
                        style="@style/ImageViewVoteStyle"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/nestedRecyclerView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/depthIndicator"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/pngwing_com"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circular_background"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="name"
                            android:textColor="#5E5B5C"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="@+id/imageView" />

                        <TextView
                            android:id="@+id/textTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="4d"
                            android:textSize="12sp"
                            android:textColor="#90555151"
                            app:layout_constraintBottom_toBottomOf="@+id/textView"
                            app:layout_constraintStart_toEndOf="@+id/textView"
                            app:layout_constraintTop_toTopOf="@+id/textView" />

                        <TextView
                            android:id="@+id/replyTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="12dp"
                            android:text="@{postitem.body}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView"
                            app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

                        <TextView
                            android:id="@+id/titleTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@{postitem.title}"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/imageView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/imageViewDownvotePost"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.downVote(postitem)}"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/replyTextView"
                            app:layout_constraintTop_toBottomOf="@+id/replyTextView"
                            app:icon="@drawable/ic_downvote" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:text="@{Integer.toString(postitem.upvotes)}"
                            app:layout_constraintBottom_toBottomOf="@+id/imageViewDownvotePost"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewDownvotePost"
                            app:layout_constraintTop_toTopOf="@+id/imageViewDownvotePost" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/imageViewUpvotePost"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="@{() -> viewModel.upVote(postitem)}"
                            app:layout_constraintBottom_toBottomOf="@+id/textView4"
                            app:layout_constraintEnd_toStartOf="@+id/textView4"
                            app:layout_constraintTop_toTopOf="@+id/textView4"
                            app:icon="@drawable/ic_upvote" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/img_addComment"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageViewUpvotePost"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewUpvotePost"
                            app:layout_constraintTop_toTopOf="@+id/imageViewUpvotePost"
                            app:icon="@drawable/baseline_comment_24" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/imageView5"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:icon="@drawable/baseline_more_vert_24" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_post" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:visibility="gone"
            style="@style/ImageViewVoteStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                app:dividerColor="@color/defaultTempColor"
                android:layout_height="2dp"></com.google.android.material.divider.MaterialDivider>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_comment"
                android:layout_width="match_parent"
                android:hint="Enter your comment"
                android:layout_margin="4dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/et_comment"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.IconButton"
                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                app:icon="@drawable/baseline_send_24"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>